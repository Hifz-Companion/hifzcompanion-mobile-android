<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/card_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="1. Fatihah,Page 1"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/due_for_memorizing_card_surah"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="Surah: 1. Fatihah"
                app:layout_constraintEnd_toEndOf="@id/card_title"
                app:layout_constraintStart_toStartOf="@id/card_title"
                app:layout_constraintTop_toBottomOf="@id/card_title" />

            <TextView
                android:id="@+id/due_for_memorizing_card_first_ayah"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="1st Ayah: 1"
                app:layout_constraintEnd_toEndOf="@id/due_for_memorizing_card_surah"
                app:layout_constraintStart_toStartOf="@id/due_for_memorizing_card_surah"
                app:layout_constraintTop_toBottomOf="@id/due_for_memorizing_card_surah" />

            <TextView
                android:id="@+id/due_for_memorizing_card_quran_page"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="Quran Page:1"
                app:layout_constraintEnd_toEndOf="@id/due_for_memorizing_card_first_ayah"
                app:layout_constraintStart_toStartOf="@id/due_for_memorizing_card_first_ayah"
                app:layout_constraintTop_toBottomOf="@id/due_for_memorizing_card_first_ayah" />

            <Button
                android:id="@+id/due_for_memorizing_finsh_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="finish memorizing"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="@id/due_for_memorizing_card_quran_page"
                app:layout_constraintStart_toStartOf="@id/due_for_memorizing_card_quran_page"
                app:layout_constraintTop_toBottomOf="@id/due_for_memorizing_card_quran_page" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</FrameLayout>